<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient6"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingRechargeportal"
        android:text="RECHARGE PORTAL"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingEnterTheID"
        android:textColor="#000000"
        android:layout_below="@id/headingRechargeportal"
        android:layout_marginTop="30dp"
        android:text="Enter Students Id"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="100dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:id="@+id/inputEnterIdForRecharge"
        android:layout_below="@id/headingEnterTheID"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRechargeGo"
        android:id="@+id/NameofRechargeStudent"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/buttonRechargeGo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputEnterIdForRecharge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="GO"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameofRechargeStudent"
        android:id="@+id/existingBalance"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/existingBalance"
        android:id="@+id/EnterRechargeAmount"
        android:hint="Enter Amount To Recharge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:visibility="invisible" />
    <Button
        android:layout_width="180dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@id/EnterRechargeAmount"
        android:id="@+id/ButtonConfirmRecharge"
        android:text="Confirm"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="RECHARGE SUCCESSFUL"
        android:visibility="invisible"
        android:layout_below="@id/ButtonConfirmRecharge"
        android:id="@+id/successful"

        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>