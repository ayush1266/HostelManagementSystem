<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logout"
        android:layout_alignParentRight="true"
        android:id="@+id/studentLogoutButton"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:id="@+id/Dashboardtitle"
        android:textColor="#ffffff"
        android:text="Welcome"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_below="@+id/Dashboardtitle"
        android:id="@+id/DashboardtitleName"
        android:textColor="#ffffff"
        android:text="Welcome"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonCheckAccountDetails"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/DashboardtitleName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Check a/c details"
        android:textSize="20sp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Check TimeTable"
        android:textSize="20sp"
        android:layout_below="@+id/buttonCheckAccountDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonchecktimetable"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Apply for Leave"
        android:textSize="20sp"
        android:layout_below="@+id/buttonchecktimetable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonApplyForLeave"
        />



</RelativeLayout>
