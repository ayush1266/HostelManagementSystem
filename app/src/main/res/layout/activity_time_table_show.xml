<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient6"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DayHeading"
        android:text="DAY"
        android:textColor="#000000"
        android:textSize="45sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/separator1"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_below="@id/DayHeading"
        android:layout_height="5dp"
        android:layout_centerVertical ="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BREAKFASTHeading"
        android:layout_below="@id/separator1"
        android:text="BREAKFAST"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BREAKFASTvalues"
        android:layout_below="@id/BREAKFASTHeading"
        android:text="DAY"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/separator2"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_below="@id/BREAKFASTvalues"
        android:layout_height="5dp"
        android:layout_centerVertical ="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LUNCHHeading"
        android:layout_below="@id/separator2"
        android:text="LUNCH"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LUNCHvalues"
        android:layout_below="@id/LUNCHHeading"
        android:text="DAY"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/separator3"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_below="@id/LUNCHvalues"
        android:layout_height="5dp"
        android:layout_centerVertical ="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DINNERHeading"
        android:layout_below="@id/separator3"
        android:text="DINNER"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DINNERvalues"
        android:textAlignment="center"
        android:layout_below="@id/DINNERHeading"
        android:text="DAY"
        android:textColor="#000000"

        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/separator4"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_below="@id/DINNERvalues"
        android:layout_height="5dp"
        android:layout_centerVertical ="true"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>